<resources>
    <style name="AppTheme" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="largeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">phone</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/stroke_panel_style</item>
    </style>

    <style name="floatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
    </style>

    <style name="edit_button">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginLeft">@dimen/app_margin</item>
    </style>

    <style name="common_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:background">@drawable/register_button_style</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>

</resources>