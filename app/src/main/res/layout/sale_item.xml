<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sale_data_container"
    android:layout_width="@dimen/sale_item_width"
    android:layout_height="@dimen/sale_item_height"
    android:layout_margin="6dp"
    android:background="@drawable/stroke_panel_style"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sale_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/menu_item_category_text"
        style= "@style/normalText"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="0dp"
        android:gravity="center"
        android:background="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/sale_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sale_text"
        android:src="@drawable/ic_base_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>